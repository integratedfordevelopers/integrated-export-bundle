<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="integrated_export_homepage" path="/export">
        <default key="_controller">IntegratedExportBundle:Default:index</default>
    </route>
    <route id="integrated_export_select" path="/export/{contentType}">
        <default key="_controller">IntegratedExportBundle:Default:export</default>
    </route>
    <route id="integrated_export_generate" path="/export/{contentType}/{format}">
        <default key="_controller">IntegratedExportBundle:Default:generate</default>
    </route>
</routes>
